.large-3.small-12.column
  = image_tag @movie.poster
.large-9.small-12.column
  %h3.ell.glassy-bg.padmy.padlx
    = @movie.title
    %span
      (#{@movie.release_year})
  %p.label.movie-label.radius.mb1
    $ #{@movie.price}
  %p= @movie.description
  
  - if signed_in?
    = link_to "", class: "button", data: {target: @cart_action, addUrl: add_to_cart_path(@movie), removeUrl: remove_from_cart_path(@movie)} do
      %i.fi-shopping-cart
      %span
      = @cart_action
      Cart
