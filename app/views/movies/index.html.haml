%h4.column Featured Movies
.column
  %ul.movies-grid.no-bullet.row
    - @movies.each do |movie|
      %li.large-3.medium-4.small-12.column
        .movie-card.padly
          = link_to movie, class: "poster" do
            = image_tag movie.poster
          .movie-info.ell.glassy-bg.padmy.padlx
            .title
              %h6
                = movie.title
                %span
                  (#{movie.release_year})
            %p.left.price.label.movie-label.radius
              $ #{movie.price}
            = link_to movie.imdb, class: "right" do
              = image_tag asset_path("imdb_logo.png")
